{
    "ConnectionStrings": {
        "Database": "Host=eventify.database;Port=5432;Database=eventify;Username=postgres;Password=postgres;Include Error Detail=true",
        "Redis": "eventify.redis:6379"
    },
    "Authentication": {
        "Audience": "account",
        "TokenValidationParameters": {
            "ValidIssuers": [ "http://eventify.identity:18080/realms/eventify", "http://localhost:18080/realms/eventify" ]
        },
        "MetadataAddress": "http://eventify.identity:18080/realms/eventify/.well-known/openid-configuration",
        "RequireHttpsMetadata": false
    },
    "KeyCloak": {
        "HealthUrl": "http://eventify.identity:18080/health/"
    },
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console",
            "Serilog.Sinks.Seq"
        ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Information"
            }
        },
        "WriteTo": [
            { "Name": "Console" },
            {
                "Name": "Seq",
                "Args": { "serverUrl": "http://eventify.seq:5341" }
            }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
        "Properties": {
            "Application": "Eventify.Api"
        }
    }
}
